<p id="notice"><%= notice %></p>

<h1>
  <%= @activity.short_title %>
</h1>

<h2>
  <%= @activity.title %>
</h2>
<br />
<div class="panel panel-info">
  <div class="panel-heading">
    <b>Category:</b>
    <%= @activity.category.name %>
  </div>
  <div class="panel panel-body">
    <b>Tags:</b> 
    <%= raw @activity.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
  </div>
</div>

<div class="alert alert-warning">
  <b>Abstract:</b><br />
  <%= @activity.abstract.gsub(/(?:\n\r?|\r\n?)/, '<br />').html_safe %>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <b>Detail</b>
  </div>
  <div class="panel panel-body">
    <%= @activity.detail.gsub(/(?:\n\r?|\r\n?)/, '<br />').html_safe %>
  </div>
  <div class="panel-footer">
    <b>Note:</b><br />
    <%= @activity.note.gsub(/(?:\n\r?|\r\n?)/, '<br />').html_safe %>
  </div>
</div>


<br />

<%= link_to 'Edit', edit_activity_path(@activity), :class => 'btn btn-info' %>
<%= link_to 'Back', activities_path, :class => 'btn' %>
